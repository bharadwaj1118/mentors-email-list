// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  role  Role   @default(MENTOR)

}

enum Role {
  MENTOR
  MENTEE
  BOTH
}


model Profile {
   id             String       @id @default(uuid())
  username    String
  firstname   String
  lastname    String
  email       String    @unique
  role        String
  bio         String
  timezone      Json
  languages   Json[]
  expertise   Json[]
  toolkit     Json[] 
  twitterUrl  String
  linkedinUrl String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

